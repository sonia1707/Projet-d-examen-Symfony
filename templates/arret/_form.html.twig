{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.nom, 'Nom de l\'arrêt', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Gare Centrale, Université...'}}) }}
        <div class="form-text">Donnez un nom descriptif à l'arrêt</div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.latitude, 'Latitude', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.latitude, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 48.8566'}}) }}
                <div class="form-text">Coordonnée GPS latitude</div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.longitude, 'Longitude', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.longitude, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 2.3522'}}) }}
                <div class="form-text">Coordonnée GPS longitude</div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-success">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_arret_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
{{ form_end(form) }}