{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.ligne, 'Ligne de bus', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.ligne, {'attr': {'class': 'form-control', 'placeholder': 'Ex: A, B, C...'}}) }}
                <div class="form-text">Entrez la lettre de la ligne de bus</div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.heureEstimee, 'Heure estimée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.heureEstimee, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.liee_a_Arret, 'Arrêt associé', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.liee_a_Arret, {'attr': {'class': 'form-select'}}) }}
        <div class="form-text">Sélectionnez l'arrêt où le bus passera</div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-success">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_passage_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
{{ form_end(form) }}